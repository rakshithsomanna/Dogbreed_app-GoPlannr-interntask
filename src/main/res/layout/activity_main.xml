<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.v4.view.ViewPager

            android:id="@+id/view_pager"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            tools:layout_editor_absoluteX="16dp"

            app:layout_constraintTop_toTopOf="parent">

    </android.support.v4.view.ViewPager>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv1"
            android:text="List of Dog breeds with subbreeds"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.12"
            app:layout_constraintVertical_bias="0.445" android:textSize="18sp" android:textStyle="bold"/>
    <ListView
            android:layout_width="293dp"
            android:layout_height="250dp"
            android:id="@+id/listview1" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="350dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="64dp"
            app:layout_constraintHorizontal_bias="0.125" android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:dividerHeight="2dp"
            android:headerDividersEnabled="true"
            android:divider="@color/black"
            android:background="@drawable/background"
    />


</android.support.constraint.ConstraintLayout>